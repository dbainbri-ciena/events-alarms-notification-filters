{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://opencord.org/alarm.schema.json",
  "type": "object",
  "title": "Alarm object",
  "definitions": {
    "uuid": {
      "type": "string",
      "pattern": "^([0-9a-fA-F]{8}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{4}\\-[0-9a-fA-F]{12})$",
      "format": "regex",
      "examples": [
        "6a2f41a3-c54c-fce8-32d2-0324e1c32e22"
      ]
    },
    "hierarical-id": {
      "type": "string",
      "pattern": "^([_a-zA-Z][-_a-zA-Z0-9]*)(\\.[_a-zA-Z][-_a-zA-Z0-9]*){0,}$",
      "format": "regex",
      "examples": [
        "org.opencord.analytics-engine",
        "org.opencord.metrics.in-packets"
      ]
    },
    "timestamp": {
      "type": "string",
      "pattern": "^([0-9]{8}T[0-6]{6}([0-9]{2})?Z)$",
      "format": "regex",
      "examples": [
        "20190101T150203Z",
        "20190101T15020301Z"
      ]
    }
  },
  "required": [
    "header",
    "alarm"
  ],
  "allOf": [{ "$ref": "file://schemas/event.schema.json" }],
  "properties": {
    "alarm": {
      "$id": "#/properties/alarm",
      "type": "object",
      "title": "Alaram values",
      "required": [
        "priority",
        "severity"
      ],
      "properties": {
        "priority": {
          "$id": "#/properties/alarm/properties/priority",
          "title": "",
          "type": "integer",
          "readOnly": true,
          "minimum": 0
        },
        "severity": {
          "$id": "#/properties/alarm/properties/severity",
          "type": "string",
          "enum": ["fatal", "critical", "major", "minor", "warning", "indeterminate", "cleared" ]
        },
        "count": {
          "$id": "#/properties/alarm/properties/count",
          "title": "",
          "type": "integer",
          "readOnly": true,
          "minimum": 0
        }
      }
    }
  }
}
